{
  "name": "lagden-trigger-viewport",
  "version": "1.0.0",
  "description": "Detects when an element reaches the value inside the viewport",
  "keywords": [
    "viewport",
    "trigger",
    "element",
    "window"
  ],
  "bug": {
    "url": "https://github.com/lagden/trigger-viewport",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "index.js",
  "repository": "lagden/trigger-viewport",
  "scripts": {
    "rm": "rm -rf dist",
    "rollup": "npm run rm && BABEL_ENV=rollup rollup -c",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "gzip": "find ./dist -name '*.js' -type f -exec sh -c 'gzip -c --best {} > {}.gz' \\;",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "prebuild": "npm test",
    "build": "npm run rollup && npm run gzip"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "index.js",
    "license",
    "README.md",
    "dist"
  ],
  "xo": {
    "envs": [
      "es6",
      "browser"
    ],
    "esnext": true,
    "semicolon": false
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "test/index.js"
    ],
    "concurrency": 1,
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "devDependencies": {
    "ava": "0.17.0",
    "coveralls": "2.11.15",
    "jsdom": "9.9.1",
    "nyc": "10.0.0",
    "rollup": "0.40.0",
    "rollup-plugin-buble": "0.15.0",
    "xo": "0.17.1"
  }
}
